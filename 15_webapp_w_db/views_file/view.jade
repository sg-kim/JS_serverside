doctype html
html
	head
		meta(charset='utf-8')
	body
		h1
			a(href='/topic') Server Side Javascript
		ul
			each topic in topics
				li
					- rid = encodeURIComponent(topic['@rid'])
					//a(href='/topic/' + topic['title'])= topic['title']
					a(href='/topic/' + rid)= topic['title']
		article
			if topic
				h2= topic['title']
				= topic['description']
				div= 'by ' + topic['author']
			else
				h2 Welcome
				| This is server side javascript tutorial.	//	| = pipe
		ul
			li
				a(href='/topic/add') add
			if topic
				- rid = encodeURIComponent(topic['@rid'])
				li
					a(href='/topic/' + rid + '/edit') edit
				li
					a(href='/topic/' + rid + '/delete') delete

